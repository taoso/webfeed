{
  "manifest_version": 2,
  "name": "WebFeed",
  "version": "0.6",
  "description": "Web Feed Reader",
  "author": "涛叔",
  "developer": {
    "name": "涛叔",
    "url": "https://taoshu.in/"
  },
  "homepage_url": "https://github.com/taoso/webfeed",
  "icons": {
    "48": "icons/icon-square.svg"
  },
  "background": {
    "page": "background.html"
  },
  "permissions": [
    "<all_urls>",
    "alarms",
    "storage",
    "bookmarks",
    "webRequest",
    "webRequestBlocking",
    "menus"
  ],
  "web_accessible_resources": ["show.html"],
  "page_action": {
    "default_icon": "icons/bar-icon.svg",
    "default_title": "Subscribe feed",
    "browser_style": true,
    "pinned": true
  },
  "browser_action": {
    "default_icon": "icons/icon-square.svg",
    "default_title": "WebFeed"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "webfeed@taoshu.in",
      "strict_min_version": "90.0"
    }
  }
}

